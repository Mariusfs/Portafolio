letras =#636363
grisot= #FFFFFE
azul = #3D9DD9

@font-face
		
		font-family: 'iconitos'
		src: url('../fonts/icomoon.eot?r6p99c')
		src: url('../fonts/icomoon.eot?r6p99c#iefix') format('embedded-opentype'),
        url('../fonts/icomoon.ttf?r6p99c') format('truetype'),
        url('../fonts/icomoon.woff?r6p99c') format('woff'),
        url('../fonts/icomoon.svg?r6p99c#icomoon') format('svg')
		font-weight: normal
		font-style: normal
		
	body 
		font-family: 'Open Sans', sans-serif
		font-weight 300	
	
	
	


		
	footer
		background #e1edff
		bottom 0
		color letras
		text-align center
		position absolute
		width 100%
		
		
		
	 h2
	 	color letras
	 	font-weight 300
	 	
	 	


	
		
     h3  
		font-weight 300
		font-size 10px
		
		
		strong
			display block
			font-weight 400
			font-size 12px
			
	h1
		font-weight 400
		margin 15px  0 0 70px
		color letras
		font-size 24px
		
				
	
		


header
	background grisot
	box-shadow 0 1px 0 azul
	overflow hidden
	padding 0.3em
	position relative
	z-index
	   
	    
.logo 
	
	img
		width 60px
	
	
			

			
nav
	background grisot
	

.menu 
	
	height 40px
	line-height 40px
	margin 0
	padding 0
	text-align center
    overflow-x auto
    white-space nowrap
    	
	
    li
		display inline-block
		a  
			color letras
			display block
			margin 0 0.1em
			padding 0 0.1em
			text-decoration none

	

.info
	margin 5px
	font-size 10px
	text-align center
	
	
.post
	padding 50px 
	text-align center
	



